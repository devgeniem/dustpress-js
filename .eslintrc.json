{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "wordpress",
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": [
            "warn",
            {
                "args": "after-used",
                "ignoreRestSiblings": false,
                "vars": "all"
            }
        ],
        "prefer-const": [
            "warn",
            {
                "destructuring": "any",
                "ignoreReadBeforeAssign": false
            }
        ],
        "yoda": [
            2,
            "never"
        ]
    }
}